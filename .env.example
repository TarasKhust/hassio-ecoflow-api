# EcoFlow API Environment Variables Example
# Copy to .env.local and modify with your actual values
# NEVER commit the .env.local file with real credentials!

# EcoFlow API Credentials
ECOFLOW_USERNAME=your_ecoflow_username
ECOFLOW_PASSWORD=your_ecoflow_password
ECOFLOW_DEVICE_SN=your_device_serial_number

# API Configuration
ECOFLOW_API_URL=https://api.ecoflow.com
ECOFLOW_TIMEOUT=30

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=DEBUG
MOCK_API=false
CACHE_RESPONSES=true

# Home Assistant Integration
HA_DEBUG=true
HA_LOG_LEVEL=DEBUG

# Security Settings
ENCRYPT_CREDENTIALS=true
USE_KEYRING=true
SESSION_TIMEOUT=3600

# Database (if using local storage)
DATABASE_URL=sqlite:///local_data.db

# Monitoring and Analytics
ENABLE_TELEMETRY=false
SENTRY_DSN=

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_API=false

# WARNING: Never commit real credentials to version control!
# Use secure credential management in production environments.
